<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.rafael1193.spicegui" path="/org/rafael1193/spicegui/">
    <key type="b" name="show-legend">
      <default>true</default>
      <summary>Show legend on plot</summary>
      <description>Wether legend should be shown over plot</description>
    </key>
    <key name="legend-position" type="s">
        <default>"best"</default>
        <summary>Legend position</summary>
        <description>
            Set legend position on plot.
            Legal values are matplotlib.axes.Axes.legend() 'loc' parameter accepted values
        </description>
    </key>
    <key type="b" name="show-grids">
      <default>true</default>
      <summary>Show grid on plot</summary>
      <description>Wether axes grids should be shown over plot</description>
    </key>
    <key type="b" name="show-line-numbers">
      <default>false</default>
      <summary>Display line numbers</summary>
      <description></description>
    </key>
    <key type="b" name="highlight-current-line">
      <default>true</default>
      <summary>Highlight current line</summary>
      <description></description>
    </key>
  </schema>
</schemalist>

